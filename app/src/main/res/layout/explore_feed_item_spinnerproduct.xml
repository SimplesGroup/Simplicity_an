<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:id="@+id/product_imgae"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_height="80dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight=".50"
            android:layout_width="0dp"
            android:layout_height="80dp">
            <TextView
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center|left"
                android:id="@+id/text_product_title"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/spin_product_price_list"
                android:layout_width="wrap_content"
                android:layout_height="20dp">

            </Spinner>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="bottom|left"
                android:textSize="14sp"
                android:id="@+id/text_product_price"
                android:layout_width="0dp"
                android:layout_weight=".80"
                android:layout_height="wrap_content" />
            <ImageButton
                android:visibility="gone"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/btn_product_favourites"
                android:layout_gravity="bottom|right"
                android:background="@android:color/transparent"
                android:src="@mipmap/heartwhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:background="@color/searchviewhintcolor"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight=".25"
            android:layout_width="0dp"
            android:layout_height="30dp">
            <TextView
               android:layout_marginTop="8sp"
                android:layout_gravity="center|center_vertical"
                android:text="Add"
                android:textSize="13sp"
                android:id="@+id/text_product_addtocart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>