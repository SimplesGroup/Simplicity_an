<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="0dp"
            android:layout_weight=".25"
            android:id="@+id/product_imgae_withoutspin"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_height="70dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight=".50"
            android:layout_width="0dp"
            android:layout_height="70dp">
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center|left"
                android:id="@+id/text_product_title_withoutspin"

                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center|left"

                android:textSize="14sp"
                android:id="@+id/text_product_price_withoutspin"
                android:layout_width="0dp"
                android:layout_weight=".80"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_marginRight="4dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/btn_product_favourites_withoutspin"
                android:layout_gravity="bottom|right"
                android:background="@android:color/transparent"
                android:src="@mipmap/heartwhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    <LinearLayout
        android:background="@color/searchviewhintcolor"
        android:orientation="vertical"

        android:layout_weight=".25"
        android:layout_width="0dp"
        android:layout_height="70dp">
        <TextView
            android:layout_marginTop="24dp"
            android:layout_gravity="center|center_vertical"
            android:text="ADD TO CART"
            android:textSize="11sp"
            android:id="@+id/text_product_addtocart_withoutspin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>