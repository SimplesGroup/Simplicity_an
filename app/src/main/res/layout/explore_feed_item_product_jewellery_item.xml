<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:background="@color/whitefood"
    android:layout_height="wrap_content">
    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_jewellery_image"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:maxHeight="150dp"/>
    <TextView
        android:textSize="20sp"

        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/text_product_jewel_title"
        android:layout_below="@+id/product_jewellery_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:paddingBottom="3dp"
        android:visibility="gone"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:id="@+id/text_product_jewel_price"
        android:layout_below="@+id/text_product_jewel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>